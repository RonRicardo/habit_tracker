<% content_for :title, "Create a New Habit" %>
<h2>New Habit</h2>
<%= flash[:alert] %>
  <br>
  <%= form_for @habit do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %>
    <br />
    <%= f.label "Description" %>
    <%= f.text_area :description %>
    <br />
    <%= f.submit "Create New Habit" %>
  <% end %>
