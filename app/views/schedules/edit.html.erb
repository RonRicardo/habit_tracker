<%= form_for @schedule do |f| %>
  <%= f.label "Select a Habit" %>
  <%= f.collection_select :habit_id, @habits, :id, :name  %>
  <br>
  <%= f.label "Select a User" %>
  <%= f.collection_select :user_id, @users, :id, :name  %>
  <br>
  <%= f.label :time %>
  <%= f.number_field (:time) %>
  <br>
  <%= f.label :frequency %>
  <%= f.text_field (:frequency) %>
  <br>
  <%= f.label :start_date %>
  <%= date_field(:schedule, :start_date) %>
  <br>
  <%= f.label :end_date %>
  <%= date_field(:schedule, :end_date) %>
  <br>
  <%= f.submit %>

<% end %>
